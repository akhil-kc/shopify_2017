<h1>New Order</h1>

<%= form_for :order, url: orders_path do |f| %>
<p>
    <%= f.label :order_id%><br>
    <%= f.text_field :orderid %>
  </p>
 
  <p>
    <%= f.label :total_price %><br>
    <%= f.text_area :total_price %>
  </p>
 
  <p>
    <%= f.label :total_tax %><br>
    <%= f.text_area :total_tax %>
  </p>

  <p>
    <%= f.label :item_name %><br>
    <%= f.text_area :item_name%>
  </p>
  <p>
   <%= check_box_tag(:shopify_upload) %>
        <%= label_tag(:shopify_upload, "Upload the data from Shopify URL?  (https://shopicruit.myshopify.com/admin/orders.json)") %>
  </p>
  <p>
   <%= check_box_tag(:add_order) %>
	<%= label_tag(:add_order, "Add the above order?") %>
  </p>
  <p>
  <%= check_box_tag(:delete_entries) %>
	<%= label_tag(:delete_entries, "Truncate Database") %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', orders_path %>

